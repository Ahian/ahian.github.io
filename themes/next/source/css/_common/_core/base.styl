h2, h3, h4, h5, h6 { margin: 60px 0 15px; }

#posts .post-body ul li{list-style-image: url("http://www.runoob.com/wp-content/themes/runoob/assets/img/bullet.png");}

a { word-wrap: break-word; }

hr {
  margin: 20px 0;
  height: 1px;
  border: none;
  background-color: #D3D3D3;
  opacity: 0.4;
  position: relative;
  top: -13px;
}

blockquote {
  padding: 0 15px;
  color: $grey-dim;
  border-left: 4px solid $gray-lighter;
  background-color: whitesmoke;
  word-break: break-word;
  cite::before {
    content: "-";
    padding: 0 5px;
  }
}

dt {
  font-weight: 700;
}
dd {
  margin: 0;
  padding: 0;
}

.pullquote {
  width: 45%;
  &.left {
    float: left;
    margin-left: 5px;
    margin-right: 10px;
  }
  &.right {
    float: right;
    margin-left: 10px;
    margin-right: 5px;
  }
}

.highlight table, .gist table {
  width: auto;
  td {
    border: none;
  }

}
.highlight, .gist {
  a {
    color: $link-hover-color !important;
    text-decoration: none !important;
  }
}

.video-container {
  position: relative;
  padding-top: 60%;
  height: 0;
  overflow: hidden;
  iframe, object, embed {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
}
